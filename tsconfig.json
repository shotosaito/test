{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/+html.jsx",
    "app/_layout.jsx",
    "app/auth/signup.jsx",
    "app/auth/login.jsx",
    "app/(tabs)/index.jsx",
    "app/(tabs)/explore.jsx",
    "app/(tabs)/customers.jsx",
    "app/(tabs)/_layout.jsx",
    "app/context/SessionProvider.jsx"
  ]
}
